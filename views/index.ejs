<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous"
    />
    <title>vLille</title>
  </head>
  <body>
    <div class="container">
      <h1 class="mb-4">vLille Stations</h1>
      <a href="/api/v1/stations/find" class="btn btn-success">Client Program</a>
      <a href="/api/v1/business" class="btn btn-success">Business Program</a>

      <% stations.forEach(station => { %>
      <div class="card mt-4">
        <div class="card-body">
          <h4 class="card-title"><%= station.fields.commune %></h4>
          <div class="card-subtitle text-muted mb-2">
            <%= station.fields.nom %>
          </div>
          <div class="card-text mb-2">
            <p>State: <%= station.fields.etat%></p>
            <p>Connection state: <%= station.fields.etatconnexion%></p>
            <p>Type: <%= station.fields.type %></p>
            <p>
              Number of bicycles available: <%= station.fields.nbvelosdispo %>
            </p>
            <p>
              Number of parkings available: <%= station.fields.nbplacesdispo %>
            </p>
          </div>
          <a href="/articles/<%= station.recordid %>" class="btn btn-primary"
            >Read More</a
          >
          <a href="/articles/edit/<%= station.recordid %>" class="btn btn-info"
            >Edit</a
          >
        </div>
      </div>
      <% }) %>
    </div>
  </body>
</html>
